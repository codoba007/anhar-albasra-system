doctype html
html(lang="ar")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title فاتورة - أنهار البصرة للمقاولات
    link(rel="stylesheet" href="/css/styles.css")
    link(rel="stylesheet" href="/css/style.css")


    // CSS مخصص لتنسيق الصفحة على A4
    style.
      @media print {
        @page { size: A4; margin: 10mm; }
      }
      body {
        font-family: 'Tajawal', sans-serif;
        direction: rtl;
        margin: 0;
        padding-top: 10mm;
        width: 200mm;
      }
      .invoice-container {
        width: 170mm;
        min-height: 297mm;
        margin: 0 auto;
        background-color: #fff;
      }
      .header {
        border-bottom: 2px solid #000;
        padding-bottom: 20px;
      }
      .footer {
        border-top: 2px solid #000;
        width: 210mm;
        padding-top: 20px;
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        text-align: left;
      }
      .signature {
        margin-top: 5px;
      }

  body
    .invoice-container
      // رأس الفاتورة
      .header.flex.justify-between.items-center.mb-8
        // شعار الشركة
        div
          img(src="/img/anhar\ albasra\ logo\ 2.png" alt="شعار الشركة" class="w-20")

        // اسم الشركة وتاريخ الفاتورة
        div.text-right
          h1(class="text-lg font-bold") شركة أنهار البصرة للمقاولات
          p(class="text-sm") تاريخ الفاتورة: #{new Date().toLocaleDateString("en-EG")}

      // محتوى الفاتورة (يكون متغير حسب الفاتورة)
      block content

      // التوقيع والختم في الأسفل
      .footer.flex.justify-between.items-center.mt-10
        // التوقيع والختم على اليسار
        .signature
          p(class="text-lg font-semibold ") التوقيع والختم:
          div.mt-2
        
        // تفاصيل الشركة على اليمين
        div.text-right
          p(class="text-sm") الموقع: <a href="https://www.anharalbasra.com/" target="_blank" class="text-blue-500">www.anharalbasra.com</a>
          p(class="text-sm") رقم الهاتف: +964 7808100090 / +964 7708100090
          p(class="text-sm") الموقع: العراق – البصرة – البراضعية
          p 
          p
