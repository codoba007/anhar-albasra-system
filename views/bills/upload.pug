extends ../layouts/main.pug

block content
  div(class="container mx-auto py-12 max-w-6xl")
    h2(class="text-2xl mb-4") رفع ملف Excel

    form(action="/upload", method="POST", enctype="multipart/form-data", class="space-y-4 bg-gray-50 p-6 rounded-md shadow-md")
      label(for="file" class="block mb-2 text-lg") اختر ملف Excel:
      input(type="file", name="file", accept=".xlsx, .xls", required class="w-full p-2 border rounded-md")

      button(type="submit", class="w-full bg-teal-500 text-white p-3 rounded-md mt-4") رفع الملف

    a(href="/bills", class="block text-teal-600 mt-4") العودة إلى القائمة
