//- extends layouts/main.pug
extends ../layouts/main

block content
  div(class="container mx-auto py-8")
    h2(class="text-2xl font-bold mb-4") تفاصيل المادة
    div(class="bg-white p-6 rounded-lg shadow-md border border-gray-200")
      p(class="text-lg mb-2")
        strong اسم السائق: 
        | #{material.driver_name}
      p(class="text-lg mb-2")
        strong رقم الوصل: 
        | #{material.receipt_number}
      p(class="text-lg mb-2")
        strong نوع المواد: 
        | #{material.material_type}
      p(class="text-lg mb-2")
        strong رقم المركبة: 
        | #{material.vehicle_number}
      p(class="text-lg mb-2")
        strong الكمية: 
        | #{material.quantity}
      p(class="text-lg mb-2")
        strong السعر: 
        | #{material.price}
      p(class="text-lg mb-2")
        strong التاريخ: 
        | #{material.material_date.toDateString()}
      p(class="text-lg mb-2")
        strong التفاصيل: 
        | #{material.details}

    // أزرار العمليات
    div(class="mt-6 space-x-4 flex justify-end")
      a(href=`/materials/${material._id}/edit` class="bg-yellow-500 ml-8 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded") تعديل
      form(action=`/materials/${material._id}/delete`, method="POST", class="inline")
        button(type="submit" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded") حذف
      button(onclick="window.print()" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded") طباعة
      a(href="/materials" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded") العودة إلى القائمة
